/* ------------gallery---- */

#gallery{
    width: 100%;
    padding: 70px 0;
   background: #efefef;
 
}

.gallery-box{
    width: 80%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    margin: auto;
}
.single-gallery{
    flex-basis: 48%;
    text-align: center;
    border-radius: 8px;
    margin-bottom: 20px;
    color: #fff;
    position: relative;
}
.single-gallery img{
    width: 100%;
    border-radius: 8px;
}

.overlay{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    border-radius: 7px;
    cursor: pointer;
    background: linear-gradient(rgb(0,0,0,0.8),#16a085);
     opacity: 0; 
    transition: 1s;
}

.single-gallery:hover .overlay{
      opacity: 1;
}

.gallery-des{
    
    width: 80%;
    position: absolute;
    bottom: 0;
    left: 50%;
    opacity: 0;
    transform: translateX(-50%);
    transition: 1s;

}

hr{
    background: #fff;
    height: 2px;
    border: 0;
    margin: 15px auto;
    width: 60%;
}

.single-gallery:hover .gallery-des{
    bottom: 40%;
   opacity: 1;
}

@media screen and (max-width:770px){
   
    .single-gallery{
        flex-basis: 100%;
      margin-bottom: 30px;
        
    }
    .gallery-des{
        font-size: 12px;
    }
    hr{
        margin: 5px auto;
    }
