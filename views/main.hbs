    <style>
        *{
    margin: 0;
    padding: 0;
}
#container{
    background: linear-gradient(rgba(0,0,0,0.2),#16a085), url(./alexandre-van-thuan-mr9FouttLGY-unsplash.jpg);
    background-size: cover;
    background-position: center;
    height: 100vh;   
}
.logo{
    width: 180px;
    position: absolute;
    left: 10%;
    top: 4%;
    border-radius: 8px;
}
.container-text{
    height: 100%;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
.container-text h1{
    font-size: 3.5rem;
    margin-bottom: 1rem;
}
.container-text p{
    font-size: 1.2rem;
    font-style: italic;
}
.container-btn{
    margin:4rem auto 0;
}
.container-btn a{
    width: 9rem;
    text-decoration: none;
    display: inline-block;
    margin: 0 10px;
    padding: 8px 6px 8px 12px;
    color: #fff;
    border: .5px solid #fff;
    text-align: center;
    position: relative;
    z-index: 1;
    transition: color 0.5s;
}
.container-btn a span{
    width: 0;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background: #fff;
    z-index: -1;
    transition: 0.5s;
}
.container-btn a:hover span{
    width: 100%;
}
.container-btn a:hover{
    color: #000;
}

#sidenav{
    width: 250px;
    height: 100vh;
    position: fixed;
    right: -250px;
    top: 0;
    background: #16a085;
    z-index: 2;
    transition: 0.5s;
}

#sidenav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

 
  #sidenav li a {
    position: relative;
    /* display: block; */
    color: #222;
    /* text-align: center; */
    padding: 8px 12px;
    text-decoration: none;
    z-index: 0;
  }
  
  li a:before {
    position: absolute;
    content: "";
    width: 100%;
    height: 100%;
    bottom: 0;
    left: 0;
    background-color: #efefef;
    z-index: -1;
    transform: scale(0);
    transition: transform 0.5s ease-in-out;
  }
  
  li a:hover:before,
  li a:focus:before {
    transform: scale(1);
  }

nav ul li{
    list-style: none;
    margin: 50px 20px;

}
nav ul li a{
    text-decoration: none;
    color: #fff;
}
#menubtn{
    width: 50px;
    height: 50px;
    background:#16a085 ;
    text-align: center;
    position: fixed;
    right: 30px;
    top: 20px;
    border-radius: 3px;
    z-index: 3;
    cursor: pointer;
}

#menubtn img{
    width: 20px;
    margin-top: 15px;
}

@media screen and (max-width:770px){
  
    .container-text h1{
        font-size: 2.4rem;
        text-align: center;
    }
    .container-btn a{
        display: block;
        margin: 20px auto;
    }
}


/* ------OUr mission------- */
 
